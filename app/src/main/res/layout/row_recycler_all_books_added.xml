<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_row_Bookname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book name"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/text_row_authorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author name"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/text_row_Publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/text_row_accountnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account number"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/text_row_Isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isbn"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/text_row_D_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D_id"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/text_row_Rackcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rack code"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/image_row_edit"
                android:src="@drawable/ic_mode_edit_24dp"
                android:layout_marginRight="25dp"
                />
            <ImageView
                android:id="@+id/image_row_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>