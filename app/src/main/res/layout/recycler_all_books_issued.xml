<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_Bookname_Issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book name"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/row_authorname_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author name"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/row_Publisher_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/row_accountnumber_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account number"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/row_Isbn_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isbn"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/row_D_id_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D_id"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/row_borrower_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrower"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/image_row_edit_issued"
                android:src="@drawable/ic_mode_edit_24dp"
                android:layout_marginRight="25dp"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/image_row_delete_issued"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>