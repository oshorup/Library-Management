<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:id="@+id/toolbar_ANBCOE">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/framelayout_ANBCOE"
        android:padding="25dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Book name"
            android:gravity="center"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="18dp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/book_name_ANBCOE" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Author name"
            android:gravity="center"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/author_name_ANBCOE" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Publisher"
            android:gravity="center"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/publisher_coe_ANBCOE" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account number"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="10sp"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_green_light"
            android:id="@+id/accNo_ANBCOE"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Isbn"
            android:gravity="center"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/isbn_ANBCOE" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="D_id"
            android:gravity="center"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/d_id_ANBCOE" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Rack_code"
            android:gravity="center"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/rack_code_ANBCOE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="ADD NEW BOOKS"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/background_curve"
            android:id="@+id/addBooksButton_ANBCOE"/>

    </LinearLayout>


</LinearLayout>